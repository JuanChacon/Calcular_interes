<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tecii.android.calcular_interes.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captura el Cantidad de capital,interes y periodo"
        android:id="@+id/textView" />

    <TextView
        android:text="@string/Monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCantCap"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtCantCap"
        android:layout_below="@+id/tvCantCap"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/tvIngrInt"
        android:layout_alignEnd="@+id/tvIngrInt" />
    <TextView
        android:text="@string/IngInte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIngrInt"
        android:layout_below="@+id/txtCantCap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtIngInt"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvIngrInt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       />

    <TextView
        android:text="@string/IngNPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNP"
        android:layout_below="@+id/txtIngInt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtINP"
        android:layout_below="@+id/tvNP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
       />

    <Button
        android:text="Calcular Interes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/txtINP"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewI"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/viewM"
        android:layout_alignEnd="@+id/viewM"
        android:height="45dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewM"
        android:layout_marginTop="12dp"
        android:height="45dp"
        android:layout_below="@+id/viewI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


</RelativeLayout>


